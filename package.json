{
  "name": "@ededejr/validate",
  "version": "0.4.0",
  "description": "A utility for validating plain objects.",
  "main": "index.js",
  "scripts": {
    "package:build": "tsup --format cjs,esm --dts && npm run package:prepare",
    "package:prepare": "npm run scripts:run prepare-dist",
    "lint": "prettier --write '**/*.{ts,json,md}'",
    "lint:check": "prettier --check '**/*.{ts,json,md}'",
    "release": "release-it",
    "release:minor": "release-it --minor",
    "release:major": "release-it --major",
    "release:patch": "release-it --patch",
    "scripts:run": "ts-node ./scripts/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ededejr/validate.git"
  },
  "bugs": {
    "url": "https://github.com/ededejr/validate/issues"
  },
  "homepage": "https://github.com/ededejr/validate#readme",
  "author": "@ededejr",
  "license": "LICENSE",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.5",
    "release-it": "^15.9.0",
    "terser": "^5.17.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": "terser",
    "terserOptions": {
      "compress": true,
      "mangle": true
    }
  },
  "release-it": {
    "git": {
      "commit": true,
      "commitMessage": "chore(release): release v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": false,
      "publishPath": "./dist"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": [
        "npm run test",
        "npm run package:build"
      ],
      "after:release": "npm publish ./dist"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
