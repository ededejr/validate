{
  "name": "@ededejr/validate",
  "version": "0.3.0",
  "description": "A utility for validating plain objects.",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf build && tsc",
    "build:candidate": "rm -rf build && tsc -p tsconfig.prod.json",
    "copy:meta": "cp package.json build/package.json && cp README.md build/README.md && cp LICENSE build/LICENSE",
    "lint": "prettier --write '**/*.{ts,json,md}'",
    "lint:check": "prettier --check '**/*.{ts,json,md}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:install": "cd .test && npm install ../build",
    "release": "release-it",
    "release:minor": "release-it --minor",
    "release:major": "release-it --major",
    "release:patch": "release-it --patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ededejr/validate.git"
  },
  "bugs": {
    "url": "https://github.com/ededejr/validate/issues"
  },
  "homepage": "https://github.com/ededejr/validate#readme",
  "author": "@ededejr",
  "license": "LICENSE",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.5",
    "release-it": "^15.9.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "release-it": {
    "git": {
      "commit": true,
      "commitMessage": "chore(release): release v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": true,
      "publishPath": "./build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": [
        "npm run test",
        "npm run build:candidate"
      ],
      "after:git:release": "npm run copy:meta",
      "after:release": "npm publish ./build"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  }
}
